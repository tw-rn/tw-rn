{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src", "jest.setup.js"],
  "exclude": ["node_modules"]
}
